.container{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: relative;
}
.content{
  position: absolute;
  z-index: 1;
}

.color-red{
  color: red;
}

.cur-date{
  text-decoration: underline;
}

.curdate-block{
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
  width: 100%;
}
.curdate-block button{
  margin: 0px 30px;
  background-color: #FFB6C1;
  color: #FFFFFF;
  width: 50px;
  height: 40px;
  line-height: 40px;
}

.calendar-block{
  margin-top: 10px;
  width: 350px;
  display: flex;
  flex-direction:row;
  flex-wrap: wrap;
  padding-left: 5px;
}
.calendar-day{
  width: 45px;
  height: 45px;
  line-height: 45px;
  margin-right: 5px;
  margin-top: 20rpx;
  text-align: center;
  font-size: 18px;
}
.modalDetail{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.5);
}
.modalDetail__box{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: auto;
  z-index: 10000;
}
